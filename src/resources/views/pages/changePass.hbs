<link rel="stylesheet" href="/styles/form.css">
<section id='body-section' class='bg-normal'>
    <div class='container'>
        <div class="row justify-content-center py-5">
            <div class="col-md-6 col-10">
                <h2 class="text-center mt-5">
                    <span class="pri-color">Change</span> your password
                </h2>
                <p class="text-center text-sm">
                    Please fill in the form below to change your password.
                </p>
                <form class='my-2' id="changePasswordF" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for='curPassword'>Your current password</label>
                        <input type='password' id='curPassword' name='oldPass' class="form-control" required placeholder="Current password" />
                    </div>
                    <div class="form-group">
                        <label for='password'>Your new password</label>
                        <input type='password' id='password' name='newPass' class="form-control" required placeholder="New password" />
                        <input type="hidden" name="username" value="{{username}}">
                    </div>
                    <div class="form-group">
                        <span class="note danger-color mt-2">
                            <i class="bi bi-exclamation-circle"></i>
                            Password must be at least 6 characters long. <br>
                            <i class="bi bi-exclamation-circle"></i>
                            Password must be contain at least one uppercase letter, one lowercase letter. <br>
                            <i class="bi bi-exclamation-circle"></i>
                            Password must be contain at least one number and one special character.
                        </span>
                    </div>
                    <div class="form-group">
                    <label for='reNewPass'>Confirm password</label><br />
                    <input type='password' id='confirmPassword' name='reNewPass' class="form-control" required placeholder="Confirm new password" />
                    </div>
                    <button type='submit' class="btn mt-1 btn-pri-f">
                        Change
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>


<script src="/js/passChange.js"></script>
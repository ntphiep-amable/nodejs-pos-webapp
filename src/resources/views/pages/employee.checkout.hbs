<h2>thanh toán</h2> <br> <br>



<div id="orderData">
    <table>
        <thead>
            <th>ten</th>
            <th>so luong</th>
            <th>tong gia</th>
        </thead>
        <tbody>
            {{#each productList}}
                <tr>
                    <td>{{productName}}</td>
                    <td>{{quantity}}</td>
                    <td>${{totalOne}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>

    <b>Tong: ${{totalAll}}</b>
</div>


<br> <br>
<form class="customerInfo">
    <label for="phone">nhập số điện thoại khách</label><br>
    <input type="text" id="phone" name="phone" required>

    <button type="submit">tìm</button>
</form>


<br> <br>
<div class="idCus">
    <h3>thông tin khách hàng</h3>



        <div id="addCus">
  
        </div>

    
</div> <br>


<label for="">so tien khach dua</label>
<input type="number" id="give" disabled required> 
<button id="back" onclick="back()">tra lai</button> <br>

<p>so tien thua tra lai khach: $<b id="paidback"></b></p>

<button onclick="conf()">xac nhan</button>










<script>
    const orderId = `{{orderId}}`;

    function back() {
        const give = document.querySelector("#give").value;

        const paidback = document.querySelector("#paidback");
        paidback.innerHTML = give - {{totalAll}};
    };


    async function conf() {
        const customerId = document.querySelector(".idCus").id;


        const response = await fetch('/employee/checkout/confirm', {
            method: "post",
            headers: { "Content-Type": "application/json" },
            body : JSON.stringify({ orderId, customerId }),
        });

        const data = await response.json();

        if (data.status) {
            alert(data.message);
        }
    }

    
    const addCustomer = document.querySelector("#addCus");

    const findCustomer = document.querySelector(".customerInfo");
    findCustomer.addEventListener('submit', async e => {
        e.preventDefault();

        const phoneNum = document.querySelector("#phone").value;

        const response = await fetch('/employee/checkout', {
            method: "post",
            headers: { "Content-Type": "application/json" },
            body : JSON.stringify({phoneNum}),
        });

        const data = await response.json();
        // console.log(data.data);

        if (!data.status) {
            // them khach hang moi
            addCustomer.innerHTML = `
                <div id="addCus">
                    <p>khong thay thong tin khach hang, tao khach hang moi</p> <br>

                    <form class="addCus">
                        <label for="fullname">ho ten khach</label><br>
                        <input type="text" id="fullname" name="fullname" required> <br>

                        <label for="address">dia chi</label><br>
                        <input type="text" id="address" name="address" required> <br> <br>

                        <button type="submit">them</button> 
                    </form>
                </div>
            `
            
            document.querySelector(".addCus").addEventListener('submit', async e => {
                e.preventDefault();

                const fullname = document.querySelector("#fullname").value;
                const address = document.querySelector("#address").value;

                const response = await fetch('/employee/checkout/add', {
                    method: "post",
                    headers: { "Content-Type": "application/json" },
                    body : JSON.stringify({ fullname, address, phoneNum, orderId }),
                });

                const dataa = await response.json();

                if (dataa.status) {
                    // console.log(dataa.data);
                    document.getElementById("give").disabled = false;
                    document.getElementsByClassName("idCus")[0].id = dataa.data.customerId;

                    addCustomer.innerHTML = `
                        <table>
                            <thead>
                                <th>fullname</th>
                                <th>address</th>
                                <th>phone number</th>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>${fullname}</td>
                                    <td>${address}</td>
                                    <td>${phoneNum}</td>
                                </tr>
                            </tbody>
                        </table>
                    `
                }
            });



        } else { 
            document.getElementById("give").disabled = false;
            const { fullname, address, phoneNum, customerId} = data.data;
            // console.log(productList);
            // console.log(thisOrders);
            document.getElementsByClassName("idCus")[0].id = customerId;

            addCustomer.innerHTML = `
                <table>
                    <thead>
                        <th>fullname</th>
                        <th>address</th>
                        <th>phone number</th>
                    </thead>
                    <tbody>
                        <tr>
                            <td id="fn"></td>
                            <td id="ad"></td>
                            <td id="pn"></td>
                        </tr>
                    </tbody>
                </table>
            `

            document.querySelector("#fn").innerHTML = fullname;
            document.querySelector("#ad").innerHTML = address;
            document.querySelector("#pn").innerHTML = phoneNum;
        }
    })

    

    
</script>

